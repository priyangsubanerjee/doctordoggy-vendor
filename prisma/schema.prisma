// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Partner {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  regisNo    String?
  password   String?
  address    String
  pincode    String
  city       String
  state      String
  country    String
  landmark   String?
  phone      String
  email      String?
  verified   Boolean  @default(false)
  services   String[]
  gstin      String?
  images     String[]
  staffCount Int

  createdAt DateTime @default(now())
}
